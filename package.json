{
  "name": "election-wars",
  "version": "0.1.0",
  "description": "Real-time political clicker game for Thailand's 2026 election",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "npm run test:unit",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .js",
    "deploy": "npm run build && firebase deploy --only hosting"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.0",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^8.57.0",
    "firebase-tools": "^13.15.0",
    "jsdom": "^24.1.0",
    "vite": "^5.4.0",
    "vitest": "^1.6.0"
  },
  "keywords": [
    "thailand",
    "election",
    "game",
    "clicker",
    "realtime",
    "supabase"
  ],
  "author": "RawinLab",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rawinlab/ElectionWars.git"
  },
  "bugs": {
    "url": "https://github.com/rawinlab/ElectionWars/issues"
  },
  "homepage": "https://github.com/rawinlab/ElectionWars#readme"
